{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-recommended-vue"
    ],
    "overrides": [
        {
            "files": [
                "**/*.vue"
            ],
            "customSyntax": "postcss-html"
        }
    ],
    "rules": {
        "block-no-empty": true,
        "selector-class-pattern": "[a-z]",
        "import-notation": "string",
        "no-empty-source": null
    }
}